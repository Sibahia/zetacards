---


<div class=`box-card ${color}`>

    <div class="card-status">
        <div class="card-id">
            <p>{pokeId}</p>
        </div>
        <div class=`card-color ${rarity}`>
            <p>{rarity}</p>
        </div>

        </div>

    <div class="card-img">
        <img src={img} alt="">
    </div>

    <div class="card-name">
        <p>{name}</p>
    </div>

    <div class="card-info">
        <div class="card-weight">
            <div class="card-title">
                <p>Weight</p>
            </div>
            <div class="card-value">
                <p>{weight} kg</p>
            </div>
        </div>
        <div class="card-height">
            <div class="card-title">
                <p>Height</p>
            </div>
            <div class="card-value">
                <p>{height} m</p>
            </div>
        </div>
    </div>

    <div class="card-type">
        <p>Type <span class="type_color">{pokeTypes}</span></p>
    </div>

</div>

