let rarity;

// console.log(legendary + " || " + mythical)

if (legendary == true || mythical == true) {
    rarity = 'Rare'
} else {
    rarity = 'Common'
}

let pokeId = id;

if (pokeId < '10') {
    pokeId = `#000${id}`
} 
else if (pokeId < '100') {
    pokeId = `#00${pokeId}`
} 
else if (pokeId < '1000') {
    pokeId = `#0${pokeId}`
}

let pokeTypes = types.join(' ');

